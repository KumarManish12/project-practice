<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creamwhite"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:id="@+id/cvhelloworld"
        android:elevation="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cvcable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/tvworld"
            android:textSize="40sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/cvfeature"
        android:elevation="20dp"

        app:layout_constraintTop_toBottomOf="@+id/cvhelloworld"
        app:layout_constraintStart_toStartOf="@+id/cvhelloworld"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/features"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/cvcable"
        android:elevation="20dp"

        app:layout_constraintTop_toBottomOf="@+id/cvhelloworld"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/cvhelloworld">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cable"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/cvextrator"
        android:elevation="20dp"

        app:layout_constraintTop_toBottomOf="@+id/cvfeature"
        app:layout_constraintStart_toStartOf="@+id/cvhelloworld"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extrator"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/cvoffline"
        android:elevation="20dp"

        app:layout_constraintTop_toBottomOf="@+id/cvcable"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/cvcable">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offline"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:elevation="20dp"

        android:id="@+id/cvrecall"
        app:layout_constraintTop_toBottomOf="@+id/cvextrator"
        app:layout_constraintStart_toStartOf="@+id/cvhelloworld"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recall"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/cvcontact"
        android:elevation="20dp"

        app:layout_constraintTop_toBottomOf="@+id/cvoffline"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cvoffline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>